<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp_c__tiktok_player.MainPage">

    <StackLayout x:Name="Container">
        <WebView x:Name="MainWebView" HorizontalOptions="Fill" VerticalOptions="Fill" Source="https://www.tiktok.com/embed/" SizeChanged="MainWebView_SizeChanged"/>
        <Button x:Name="StartButton" SizeChanged="StartButton_SizeChanged" HeightRequest="100" Clicked="StartButton_Clicked" Text="Start" HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="Black" FontAttributes="Bold" FontSize="Subtitle"/>
        <HorizontalStackLayout x:Name="VideoNavigationContainer" HeightRequest="100" VerticalOptions="End" HorizontalOptions="Fill" >
            <Button x:Name="ReloadVideoButton" Text="R" TextColor="White" TextTransform="Uppercase" HeightRequest="100" BackgroundColor="Transparent" VerticalOptions="End" HorizontalOptions="Fill" Clicked="ReloadVideoButton_Clicked" FontAttributes="Bold" FontSize="Subtitle"/>
            <Button x:Name="NextButton" Text="NEXT VIDEO" TextColor="White" TextTransform="Uppercase" HeightRequest="100" BackgroundColor="Transparent" VerticalOptions="End" HorizontalOptions="Fill" Clicked="NextVideoButton_Clicked" FontAttributes="Bold" FontSize="Subtitle"/>
        </HorizontalStackLayout>
    </StackLayout>

</ContentPage>
