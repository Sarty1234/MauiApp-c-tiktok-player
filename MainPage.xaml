<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp_c__tiktok_player.MainPage">

    <Grid x:Name="Container" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        
        <WebView x:Name="MainWebView" Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Fill" Source="https://www.tiktok.com/embed/"/>
        <Grid x:Name="VideoNavigationContainer" Grid.Row="1" BackgroundColor="Transparent" VerticalOptions="Fill" HorizontalOptions="Fill" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="ReloadVideoButton" Text="R" TextColor="White" BackgroundColor="Black" TextTransform="Uppercase" VerticalOptions="Fill" HorizontalOptions="Fill" Clicked="ReloadVideoButton_Clicked" FontAttributes="Bold" FontSize="Subtitle"/>
            <Button Grid.Column="1" x:Name="NextButton" Text="NEXT VIDEO" BackgroundColor="Black" TextColor="White" TextTransform="Uppercase" VerticalOptions="Fill" HorizontalOptions="Fill" Clicked="NextVideoButton_Clicked" FontAttributes="Bold" FontSize="Subtitle"/>
        </Grid>
    </Grid>

</ContentPage>
